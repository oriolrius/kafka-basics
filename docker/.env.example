# Docker Compose Configuration for Kafka Basics Web Application
# Copy this file to .env and customize for your environment

# ============================================================================
# IMAGE CONFIGURATION
# ============================================================================
IMAGE_TAG=latest

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
API_PORT=3001
BACKEND_EXTERNAL_PORT=3001
FRONTEND_EXTERNAL_PORT=8080

# Vite API URL (used at build time)
# Use relative path for same-host deployment, or full URL for CORS
VITE_API_URL=/api

# ============================================================================
# KAFKA BROKER CONFIGURATION
# ============================================================================
# Kafka external port (host machine)
KAFKA_EXTERNAL_PORT=9092

# Kafka broker address (from backend container perspective)
# Use 'kafka' for docker-compose internal network
# Use 'localhost:9092' if connecting from host machine
KAFKA_BROKER=kafka:9092
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=kafka-basics-docker
KAFKA_TOPIC=test-topic

# ============================================================================
# KAFKA SECURITY CONFIGURATION
# ============================================================================
# TLS/SSL Configuration
KAFKA_USE_TLS=false
KAFKA_REJECT_UNAUTHORIZED=true
# KAFKA_SSL_CA_LOCATION=/path/to/ca.crt
# KAFKA_SSL_CERT_LOCATION=/path/to/client-cert.pem
# KAFKA_SSL_KEY_LOCATION=/path/to/client-key.pem

# SASL Authentication
# Options: plain, scram-sha-256, scram-sha-512, oauthbearer
KAFKA_SASL_MECHANISM=
KAFKA_USERNAME=
KAFKA_PASSWORD=

# ============================================================================
# OAUTH2/OAUTHBEARER CONFIGURATION
# ============================================================================
OAUTH_ENABLED=false
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_TOKEN_ENDPOINT_URI=
OAUTH_JWKS_ENDPOINT_URI=
OAUTH_SCOPE=
OAUTH_SSL_CA_LOCATION=
OAUTH_SSL_REJECT_UNAUTHORIZED=false
OAUTH_TOKEN_EXPIRY_BUFFER=60

# ============================================================================
# KAFKA CONSUMER CONFIGURATION
# ============================================================================
KAFKA_CONSUMER_GROUP=kafka-basics-docker-group
KAFKA_FROM_BEGINNING=true

# ============================================================================
# SCHEMA REGISTRY CONFIGURATION (Optional)
# ============================================================================
SCHEMA_REGISTRY_URL=
SCHEMA_REGISTRY_USE_TLS=false
SCHEMA_REGISTRY_USERNAME=
SCHEMA_REGISTRY_PASSWORD=
